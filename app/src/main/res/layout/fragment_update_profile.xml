<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txtUpdateType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            android:fontFamily="@font/worksans_bold"
            android:text="@string/favorite_product"
            android:textColor="#223263"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/ic_round_chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBF0FF"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout2" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_update_name"
        android:visibility="gone"
        android:background="@color/white"
        android:clickable="false"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintBottom_toTopOf="@+id/btn_update_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="@string/first_name"
                android:textColor="#223263"
                android:textSize="@dimen/_14sdp" />
            <LinearLayout
                android:id="@+id/llnew_fist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <EditText
                    android:id="@+id/edt_new_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="@string/last_name"
                android:textColor="#223263"
                android:textSize="@dimen/_14sdp" />
            <LinearLayout
                android:id="@+id/llnew_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <EditText
                    android:id="@+id/edt_new_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

        </LinearLayout>
        

      
        <TextView
            android:id="@+id/btn_update_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_account_end"
            android:fontFamily="@font/worksans_semi_bold"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_update_email"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_update_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Enter new email"
                android:textColor="#223263"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:id="@+id/llnew_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">


                <ImageView
                    android:id="@+id/ic_mail2"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"

                    android:src="@drawable/ic_round_mail" />

                <TextView
                    android:layout_marginStart="@dimen/_6sdp"
                    android:id="@+id/edt_new_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:hint="@string/your_email"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_error_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/worksans_semi_bold"
                android:text=""
                android:textColor="@color/appcolor"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_update_pass"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_update_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Enter old pass"
                android:textColor="#223263"
                android:textSize="@dimen/_13sdp" />
            <LinearLayout
                android:id="@+id/ll_old_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <EditText
                    android:id="@+id/edt_old_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:hint="@string/old_pass"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="@string/enter_new_pass"
                android:textColor="#223263"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:id="@+id/ll_new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <EditText
                    android:id="@+id/edt_new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:inputType="textPassword"
                    android:hint="@string/enter_new_pass"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="@string/re_enter_new_pass"
                android:textColor="#223263"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:id="@+id/ll_renew_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <EditText
                    android:id="@+id/edt_renew_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:hint="@string/re_enter_new_pass"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/btn_update_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_account_end"
            android:fontFamily="@font/worksans_semi_bold"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_update_gentel"
        android:visibility="gone"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_update_gentel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Choose your gentel"
                android:textColor="#223263"
                android:textSize="@dimen/_13sdp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_new_gentel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:id="@+id/txt_new_gentel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:rotation="270"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_round_chevron_left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/btn_update_gentel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_account_end"
            android:fontFamily="@font/worksans_semi_bold"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_update_birthday"
        android:visibility="gone"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


        <LinearLayout
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_update_birthday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Choose your birthday"
                android:textColor="#223263"
                android:textSize="@dimen/_13sdp" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llnew_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">
                <EditText
                    android:id="@+id/edt_birthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/worksans_semi_bold"
                    android:gravity="top"
                    android:hint="12/04/2023"
                    android:paddingEnd="@dimen/_14sdp"
                    android:textColor="@color/textcolor2"
                    android:textColorHint="#9098B1"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_acc_bithday"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_6sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <DatePicker

                    android:id="@+id/date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_update_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_account_end"
            android:fontFamily="@font/worksans_semi_bold"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
