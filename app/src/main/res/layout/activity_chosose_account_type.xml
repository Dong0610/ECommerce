<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/worksans_bold"
                android:text="Đăng kí tài khoản với tư cách"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_20sdp" />
            <ImageView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_42sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_question"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"/>

            <TextView

                android:id="@+id/btn_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/bg_btn_account_end"
                android:fontFamily="@font/worksans_semi_bold"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Người bán hàng"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btn_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/bg_edt_account_dis"
                android:fontFamily="@font/worksans_semi_bold"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Người tiêu dùng"
                android:textAlignment="center"
                android:textColor="@color/textcolor2"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

</LinearLayout>